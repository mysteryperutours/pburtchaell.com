{
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https+git://github.com/pburtchaell/pburtchaell.com.git"
  },
  "scripts": {
    "precommit": "echo 'Running pre-commit hook...' && npm test",
    "prebuild": "rm -rf ./build",
    "build": "NODE_ENV=production `npm bin`/webpack --progress",
    "flow": "`npm bin`/flow; test $? -eq 0 -o $? -eq 2",
    "generate": "./bin/generate.sh",
    "lint": "`npm bin`/eslint app/**/*.js test/**/*.js",
    "pretest": "npm run lint",
    "test": "`npm bin`/jest",
    "start": "`npm bin`/webpack-dev-server --content-base app/ --open --port 8080 --history-api-fallback --inline --client-log-level warning",
    "update-database-rules": "firebase deploy --only database",
    "update-database": "firebase database:set / database.json"
  },
  "jest": {
    "setupFiles": [
      "whatwg-fetch",
      "./test/setup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/node_modules/jest-css-modules"
    }
  },
  "engines": {
    "node": "6.5.0",
    "npm": "3.10.3"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "classnames": "^2.2.5",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-tap-event-plugin": "^2.0.1",
    "unfetch": "^2.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "compression-webpack-plugin": "^0.4.0",
    "coveralls": "^2.13.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.44.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "jest-css-modules": "^1.1.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "react-test-renderer": "^15.5.4",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-bundle-analyzer": "^2.4.0",
    "webpack-dev-server": "^2.4.2"
  }
}
