---
hire: true
---

{{> open-inc ~}}
{{> header-inc}}
<main role=main id=main>
  <article itemscope itemtype=http://data-vocabulary.org/Article class="article page">
    {{#if cover ~}}
    <header class="article-header cover-image" 
            style="background-image: url(/assets/img/blog/{{cover}});">
    {{else}}
    <header class=article-header>
    {{/if}}
      <hgroup>
        <h1 class=article-title itemprop=name>{{page.title}}</h1>
        <time>{{prettyDate this.page.data.date}}</time>
      </hgroup>
    </header><!-- /article-header -->

    <section class=article-content>
      {{#markdown}}
        {{> body }}
      {{/markdown ~}}
      <script>Echo.init();</script>
    </section><!-- /article-content -->

    <footer class=article-footer>
      <img class=article-author-img src=/assets/img/site/patrick.jpg height=100px width=100px>
      <div class=article-author-info itemscope itemtype=http://data-vocabulary.org/Person itemprop=author>
        <h6 class=rst>Written By<br>
        <strong intemprop=name class=rst>{{#with author ~}}{{name.first}} {{name.last}}{{~/with~}}</strong></h6>
        <p class=article-author-bio><small>
          I am Patrick Burtchaell, a 
          <span itemprop=title>graphic design and computer science student</span>
          <span itemscope itemprop=address itemtype=http://data-vocabulary.org/Address>
            from <span itemprop=locality>New Orleans</span> attending Loyola University.<br>
            <a href="https://twitter.com/intent/user?screen_name={{author.twitter}}" 
               class="line rst">@pburtchaell</a> on Twitter
          </span></small>
        </p>
      </div><!-- /article-author -->
    </footer><!-- /article-footer -->

  </article><!-- /.article.page -->
  {{> hire }}
</main><!-- /#main -->
{{> footer-inc}}
{{> close-inc ~}}
