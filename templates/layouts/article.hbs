---
hire: false
---
{{> head ~}}
{{> header }}
<main role=main id=main>
  <article itemscope itemtype=http://data-vocabulary.org/Article class="article {{basename}}-page page">

    {{#if cover ~}}
    <header class="article-header cover-image" 
            style="background-image: url(/assets/img/blog/{{cover}});">
    {{else}}
    <header class=article-header>
    {{/if}}
      <hgroup>
        <h1 class=article-title itemprop=name>{{page.title}}</h1>
        <time class=article-pubdate>{{date this.page.data.date}}</time>
      </hgroup>
    </header>

    <section class=article-content>
      {{#marked}}
        {{>body}}
      {{/marked}}
      <script>Echo.init();</script>
    </section>

    <footer class=article-footer>
      <img class=article-author-img alt="Patrick Burtchaell" src=http://core.pburtchaell.com/images/patrick.jpg height=100px width=100px>
      <div class=article-author-info itemscope itemtype=http://data-vocabulary.org/Person itemprop=author>
        <h6 class=rst>Written By<br>
        <strong intemprop=name class=rst>{{#with author}}{{name.first}} {{name.last}}{{/with}}</strong></h6>
        <p class=article-author-bio>
          <small>
              I am Patrick Burtchaell, a <span itemprop=title>design and computer science student</span><span itemscope itemprop=address itemtype=http://data-vocabulary.org/Address>from <span itemprop=locality>New Orleans</span> at Loyola University and front end web developer at <a href=http://joinpeach.com rel=external target=_blank>Peach</a>.</span><span>I build and design products for the web.<br><a href="https://twitter.com/intent/user?screen_name={{author.twitter}}" class="line rst">@pburtchaell</a> on Twitter</span>
          </small>
        </p>
      </div>
    </footer>

  </article>
</main>
{{> footer }}
{{> script ~}}
